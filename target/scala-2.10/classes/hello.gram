#JSGF V1.0;

/**
 * JSGF Grammar for Hello World example
 */

grammar hello;

public <basicCmd> = <startPolite> <command> <endPolite>;
<command> = <action> <object>;
<action> = (turn on | turn off | turn up | turn down);
<object> = [the | a] (light one| light two);
<startPolite> = (please | house | could you) *;
<endPolite> = [thanks | thank you | please];
